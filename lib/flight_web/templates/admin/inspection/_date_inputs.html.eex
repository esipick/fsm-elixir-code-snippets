<div class="form-group">
  <label>Name *</label>
  <%= text_input @f, :name, class: "form-control" %>
  <%= full_error_tag @f, :name %>
</div>

<div class="form-group">
  <label>Last Inspection</label>
  <%= date_input @f, :last_inspection_date, class: "form-control", placeholder: "MM/DD/YYYY", value: format_date(input_value(@f, :last_inspection_date)) %>
  <%= full_error_tag @f, :last_inspection_date %>
</div>

<div class="form-group">
  <label>Next Inspection</label>
  <%= date_input @f, :next_inspection, class: "form-control", placeholder: "MM/DD/YYYY", value: format_date(input_value(@f, :next_inspection)) %>
  <%= full_error_tag @f, :next_inspection %>
</div>

