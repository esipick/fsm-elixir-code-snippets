<!doctype html>
<html lang="en">
  <head>
    <title>Set your new password â€” Flight School Manager</title>
    <%= render FlightWeb.Admin.PartialView, "_shared_head.html", assigns %>
  </head>
  <body class="sidebar-none">
    <div class="wrapper">

    <!-- sidebar removed -->

    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-absolute">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <a class="navbar-brand" href="#">Flight School Manager</a>
          </div>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="panel-header panel-header-sm">
        <div class="header text-center">
          <!-- no header info -->
        </div>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-7 col-lg-5 ml-auto mr-auto">
            <div class="card text-center">
              <div class="card-header ">
                <h2 class="card-title">Reset Password</h2>
              </div>
              <%= form_tag "/reset_password", method: "post" do %>
                <input name="token" type="hidden" value="<%= @password_reset.token %>" />
                <div class="card-body">
                  <p>Create your new password below. Passwords must be at least 6 characters in length.</p>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="sr-only">New password</label>
                        <input name="password" type="password" class="form-control" placeholder="New password"/>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">    
                      <div class="form-group">  
                        <label class="sr-only">Repeat new password</label>
                        <input name="password_confirmation" type="password" class="form-control" placeholder="Repeat new password"/>
                        <input type="submit" class="btn btn-primary btn-round btn-lg mt-4" value="Submit" />   
                      </div>
                    </div>
                  </div>

                </div> <!-- end card body -->
                <div class="card-footer mb-3">
                  <div class="col-md-8 ml-auto mr-auto">
                    <p class="text-muted"><small>If you still need help, contact <a href="#linkHere">FSM Support</a> .</small></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- right column -->
        </div>
      </div>

    </div>
  </div>
</body>

<%= if get_flash(@conn, :success) do %>
  <script>
    $(document).ready(function() {
      $.notify({message: "<%= get_flash(@conn, :success) %>"}, {type: "success", placement: {align: "center"}})
    })
  </script>
<% end %>

<%= if get_flash(@conn, :error) do %>
  <script>
    $(document).ready(function() {
      $.notify({message: "<%= get_flash(@conn, :error) %>"}, {type: "danger", placement: {align: "center"}})
    })
  </script>
<% end %>

</html>
